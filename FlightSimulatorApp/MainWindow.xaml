        <TextBox x:Name="ipBox" HorizontalAlignment="Left" Height="20" Margin="136,71,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="66"/>
        <TextBox x:Name="portBox" HorizontalAlignment="Left" Height="20" Margin="136,96,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="66"/>
        <Label Content="IP:" HorizontalAlignment="Left" Height="31" Margin="94,66,0,0" VerticalAlignment="Top" Width="74" FontFamily="Lucida Sans Unicode" FontSize="14"/>
        <Label Content="Port:" HorizontalAlignment="Left" Height="31" Margin="94,92,0,0" VerticalAlignment="Top" Width="74" FontFamily="Lucida Sans Unicode" FontSize="14"/>
        <TextBox x:Name="statusBox" HorizontalAlignment="Left" Height="31" Margin="116,22,0,0" TextWrapping="Wrap" Text="{Binding dashboardVM.VM_Status}"  VerticalAlignment="Top" Width="406" IsReadOnly="True" TextChanged="statusBox_TextChanged" FontSize="18" FontFamily="Lucida Sans Unicode" />
        <Rectangle HorizontalAlignment="Left" Height="400" Margin="20,131,0,0" VerticalAlignment="Top" Width="516" Grid.RowSpan="2" Fill="#FF383838"/>


        <m:Map x:Name="myMap" Margin="23,134,571.4,64" Grid.RowSpan="2" Mode="Road" CredentialsProvider="nw9X5t1VORpRClqJavkK~XN8n9COo6PKhDoEQJKEZQA~AtnOCAe8bf0NUKZkOULqwpGPW-7-diFVfJClHL_VUDdmlzB-SYSECuKD1K98KyLS" Center="32.003657, 34.872770" ZoomLevel="6" BorderBrush="Black">
            <Canvas Height="19" x:Name="airplane"
              m:MapLayer.Position="{Binding mapVM.VM_PlaneLocation}"
              m:MapLayer.PositionOrigin="Center" Opacity="1" VerticalAlignment="Top" Margin="0,0,-19,-11" RenderTransformOrigin="-1.754,-1.933">
                <Image x:Name="plane" HorizontalAlignment="Left" Height="25" Margin="0,0,0,0" VerticalAlignment="Top" Width="25" Source="Resources/Black_airplane.png" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform x:Name="planeAngle" Angle="{Binding mapVM.VM_Angle}"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
            </Canvas>
        </m:Map>

        <Rectangle HorizontalAlignment="Left" Height="40" Margin="28,139,0,0" VerticalAlignment="Top" Width="157" Fill="#7FFFFFFF"/>

        <Rectangle x:Name="planeBoxView" HorizontalAlignment="Left" Height="22" Margin="28,187,0,0" VerticalAlignment="Top" Width="268" Fill="#7FFFFFFF"/>

        <Label Content="Latitude:" HorizontalAlignment="Left" Height="31" Margin="28,134,0,0" VerticalAlignment="Top" Width="93" FontFamily="Lucida Sans Unicode" FontSize="12"/>
        <Label Content="Longitude:" HorizontalAlignment="Left" Height="31" Margin="28,155,0,0" VerticalAlignment="Top" Width="93" FontFamily="Lucida Sans Unicode" FontSize="12"/>
        <Label x:Name="latitude" Content="{Binding mapVM.VM_Latitude}" HorizontalAlignment="Left" Height="31" Margin="96,134,0,0" VerticalAlignment="Top" Width="93" FontFamily="Lucida Sans Unicode" FontSize="12"/>
        <Label x:Name="longitude" Content="{Binding mapVM.VM_Longitude}" HorizontalAlignment="Left" Height="31" Margin="96,155,0,0" VerticalAlignment="Top" Width="93" FontFamily="Lucida Sans Unicode" FontSize="12"/>
        <Label x:Name="planeViewText" Content="Airplane icon will appear when connected."  HorizontalAlignment="Left" Margin="27,182,0,0" VerticalAlignment="Top" Height="43" Width="321" FontSize="14" Background="{x:Null}"/>
        <Button x:Name="mapViewButton" Content="Change To Aerial View" HorizontalAlignment="Left" Height="28" Margin="356,317,0,0" VerticalAlignment="Top" Width="167" Click="mapViewButton_Click" FontSize="14" FontWeight="Bold" Grid.Row="1" RenderTransformOrigin="0.353,0.464">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA6A6A6" Offset="0"/>
                    <GradientStop Color="White" Offset="0.52"/>
                    <GradientStop Color="#FFA6A6A6" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="centerButton" Content="Center And Focus" HorizontalAlignment="Left" Height="28" Margin="171,317,0,0" VerticalAlignment="Top" Width="167" Click="centerButton_Click" FontSize="14" FontWeight="Bold" Grid.Row="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA6A6A6" Offset="0"/>
                    <GradientStop Color="White" Offset="0.52"/>
                    <GradientStop Color="#FFA6A6A6" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <ComboBox x:Name="planeColorBox" HorizontalAlignment="Left" Margin="28,332,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" SelectionChanged="planeColorBox_SelectionChanged">
            <ComboBoxItem x:Name="blackColor" Content="Black"/>
            <ComboBoxItem Content="Red"/>
            <ComboBoxItem Content="Green"/>
            <ComboBoxItem Content="Blue"/>
            <ComboBoxItem Content="Yellow"/>
            <ComboBoxItem Content="Purple"/>
        </ComboBox>

        <Rectangle x:Name="controlsTextBox" HorizontalAlignment="Left" Height="25" Margin="657,15,0,0" VerticalAlignment="Top" Width="336" Fill="#7FFFFFFF" Grid.Row="1"/>
        <Label x:Name="controlsView" Content="Controls are disabled. Connect to enable." HorizontalAlignment="Left" Margin="656,9,0,0" VerticalAlignment="Top" Height="40" Width="365" FontSize="18" Background="{x:Null}" Grid.Row="1" Foreground="Black"/>
        <Label Content="Airplane Color:" HorizontalAlignment="Left" Height="31" Margin="32,306,0,0" VerticalAlignment="Top" Width="116" FontFamily="Lucida Sans Unicode" FontSize="14" Grid.Row="1"/>
    </Grid>
</Window>
