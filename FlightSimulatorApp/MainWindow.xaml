        <Label Content="attitude-indicator__internal-pitch-deg" Foreground ="#FF00B200" HorizontalAlignment="Left" Height="40" Margin="638,165,0,0" VerticalAlignment="Top" Width="300" FontSize="16"/>
        <Label Content="attitude-indicator_internal-roll-deg" Foreground ="#FF00B200" HorizontalAlignment="Left" Height="40" Margin="638,145,0,0" VerticalAlignment="Top" Width="300" FontSize="16"/>
        <Label Content="gps__indicated-altitude-ft" Foreground ="#FF00B200" HorizontalAlignment="Left" Height="40" Margin="638,125,0,0" VerticalAlignment="Top" Width="300" FontSize="16"/>
        <Label Content="airspeed-indicator__indicated-speed-kt" Foreground ="#FF00B200" HorizontalAlignment="Left" Height="40" Margin="638,105,0,0" VerticalAlignment="Top" Width="300" FontSize="16"/>
        <Label Content="gps__indicated-ground-speed-kt" Foreground ="#FF00B200" HorizontalAlignment="Left" Height="40" Margin="638,85,0,0" VerticalAlignment="Top" Width="300" FontSize="16"/>
        <Label Content="gps__indicated-vertical-speed" Foreground ="#FF00B200" HorizontalAlignment="Left" Height="40" Margin="638,65,0,0" VerticalAlignment="Top" Width="300" FontSize="16"/>
        <Label Content="indicated-heading-deg" Foreground ="#FF00B200" HorizontalAlignment="Left" Height="40" Margin="638,45,0,0" VerticalAlignment="Top" Width="300" FontSize="16"/>
        <Label x:Name="altimeter_indicated_altitude_ft" Foreground ="#FF00B200" Content="{Binding dashboardVM.VM_AltimeterIndicatedAltitudeFt}" HorizontalAlignment="Left" Height="40" Margin="936,185,0,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
        <Label x:Name="attitude_indicator_internal_pitch_deg" Foreground ="#FF00B200" Content="{Binding dashboardVM.VM_PitchDeg}" HorizontalAlignment="Left" Height="40" Margin="936,165,0,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
        <Label x:Name="attitude_indicator_internal_roll_deg" Foreground ="#FF00B200" Content="{Binding dashboardVM.VM_RollDeg}" HorizontalAlignment="Left" Height="40" Margin="936,145,0,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
        <Label x:Name="gps_indicated_altitude_ft" Foreground ="#FF00B200" Content="{Binding dashboardVM.VM_GpsIndicatedAltitudeFt}" HorizontalAlignment="Left" Height="40" Margin="936,125,0,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
        <Label x:Name="airspeed_indicator_indicated_speed_kt" Foreground ="#FF00B200" Content="{Binding dashboardVM.VM_IndicatedSpeedKt}" HorizontalAlignment="Left" Height="29" Margin="936,105,0,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
        <Label x:Name="gps_indicated_ground_speed_kt" Foreground ="#FF00B200" Content="{Binding dashboardVM.VM_GroundSpeedKt}" HorizontalAlignment="Left" Height="40" Margin="936,85,0,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
        <Label x:Name="gps_indicated_vertical_speed" Foreground ="#FF00B200" Content="{Binding dashboardVM.VM_VerticalSpeed}" HorizontalAlignment="Left" Height="40" Margin="936,65,0,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
        <Label x:Name="indicated_heading_deg" Foreground ="#FF00B200" Content="{Binding dashboardVM.VM_HeadingDeg}" HorizontalAlignment="Left" Height="40" Margin="936,45,0,0" VerticalAlignment="Top" Width="100" FontSize="16"/>
        <MyControls:myControls x:Name="myControls" Margin="411,188,-101.6,-31" RenderTransformOrigin="0.736,0.574" Grid.RowSpan="2">
            <MyControls:myControls.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="-39.99" Y="-4.997"/>
                </TransformGroup>
            </MyControls:myControls.RenderTransform>
        </MyControls:myControls>
